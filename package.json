{
  "name": "time-tracking-system",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "firebase:emulators": "firebase emulators:start",
    "emulators:seed": "firebase emulators:start --import=./seed",
    "emulators:export": "firebase emulators:export ./seed",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:all": "firebase deploy",
    "deploy:admin": "firebase deploy --only hosting:admin",
    "deploy:hours": "firebase deploy --only hosting:hours",
    "app:deploy": "node scripts/deploy.js",
    "app:deploy:test": "node scripts/preview.js",
    "verify:firebase-config": "node scripts/verify-firebase-config.js",
    "build:all": "pnpm run build:common && pnpm run build:admin && pnpm run build:hours",
    "build:common": "cd packages/common && pnpm run build",
    "build:admin": "cd packages/admin && pnpm run build",
    "build:hours": "cd packages/hours && pnpm run build",
    "build:ci": "node scripts/ci-cleanup-fix.js && pnpm run fix:module-syntax && pnpm run fix:typescript && pnpm run build:all",
    "build:fallback": "node scripts/build/build-fallback.js",
    "test:deployment": "node scripts/preview.js --skip-deploy",
    "fix:dependencies": "node scripts/build/build-fallback.js",
    "fix:jest-dom": "node scripts/test-types/test-deps-fixer.js",
    "fix:all": "node scripts/preview.js --auto-fix-typescript --fix-query-types --fix-test-deps",
    "fix:query-types": "node scripts/typescript/query-types-fixer.js",
    "fix:test-deps": "node scripts/test-types/test-deps-fixer.js",
    "fix:module-syntax": "node scripts/checks/module-syntax-check.js",
    "fix:typescript": "node scripts/typescript/typescript-fixer.js",
    "fix:typescript:enhanced": "node scripts/typescript/typescript-fixer.js",
    "fix:query-types:enhanced": "node scripts/typescript/query-types-fixer.js",
    "fix:test-deps:enhanced": "node scripts/test-types/test-deps-fixer.js",
    "modernize": "node scripts/checks/module-syntax-check.js",
    "modernize:components": "node scripts/checks/module-syntax-check.js",
    "cleanup": "node scripts/firebase/channel-cleanup.js",
    "docs:find-duplicates": "node scripts/checks/doc-quality.js",
    "docs:generate-index": "node scripts/checks/doc-quality.js --generate-index",
    "docs:quality-check": "node scripts/checks/doc-quality.js",
    "docs:design-system": "node scripts/preview-design-system.js",
    "design": "node scripts/preview-design-system.js",
    "workflow:check": "node scripts/preview.js --skip-deploy",
    "workflow:validate": "node scripts/checks/workflow-validation.js",
    "workflow:lint": "node scripts/checks/lint-check.js",
    "workflow:typecheck": "node scripts/checks/typescript-check.js",
    "workflow:test": "node scripts/checks/test-runner.js",
    "workflow:fix-typescript": "node scripts/typescript/typescript-fixer.js",
    "project:audit": "pnpm run docs:generate-index && pnpm run docs:find-duplicates",
    "project:cleanup": "pnpm run cleanup",
    "project:validate": "node scripts/checks/workflow-validation.js && node scripts/checks/doc-quality.js",
    "lint": "eslint packages/*/src/**/*.{ts,tsx} --max-warnings=100",
    "lint:fix": "eslint packages/*/src/**/*.{ts,tsx} --fix",
    "test:watch": "pnpm run fix:test-deps && vitest",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:report": "vitest run --coverage --reporter=html",
    "test:coverage:ci": "vitest run --coverage --reporter=json",
    "precommit": "pnpm run project:audit && pnpm run lint && pnpm exec vitest run",
    "edit:fix-typescript": "node scripts/typescript/typescript-fixer.js",
    "preview:all": "pnpm run fix:all && pnpm run lint && pnpm exec vitest run && pnpm run build:all",
    "preview:fix-typescript": "node scripts/preview.js --auto-fix-typescript",
    "preview:fix-query-types": "node scripts/preview.js --fix-query-types",
    "preview:fix-test-deps": "node scripts/preview.js --fix-test-deps",
    "preview:fix-all": "node scripts/preview.js --auto-fix-typescript --fix-query-types --fix-test-deps",
    "preview:clean": "node scripts/preview.js --skip-deploy",
    "preview:analyze": "node scripts/preview.js --skip-deploy",
    "preview:analyze-only": "node scripts/preview.js --skip-lint --skip-typecheck --skip-tests --skip-deploy",
    "preview:security": "node scripts/preview.js --skip-lint --skip-typecheck --skip-tests --skip-bundle-analysis --skip-deploy --skip-dead-code-detection",
    "preview:deadcode": "node scripts/preview.js --skip-lint --skip-typecheck --skip-tests --skip-bundle-analysis --skip-dependency-scan --skip-deploy",
    "preview:docquality": "node scripts/preview.js --skip-lint --skip-typecheck --skip-tests --skip-bundle-analysis --skip-dependency-scan --skip-dead-code-detection --skip-deploy",
    "preview:modulesyntax": "node scripts/preview.js --skip-lint --skip-typecheck --skip-tests --skip-bundle-analysis --skip-dependency-scan --skip-dead-code-detection --skip-doc-quality --skip-deploy",
    "preview:workflow": "node scripts/improved-workflow.js",
    "workflow": "node scripts/improved-workflow.js",
    "preview:list": "node scripts/firebase/channel-manager.js list",
    "preview:quick": "node scripts/preview.js --quick",
    "preview:no-tests": "node scripts/preview.js --skip-tests",
    "preview:no-lint": "node scripts/preview.js --skip-lint",
    "preview:no-typecheck": "node scripts/preview.js --skip-typecheck",
    "preview:help": "node scripts/preview.js --help",
    "preview:debug": "node scripts/preview.js --quick --save-logs",
    "preview:skip-firestore": "node scripts/preview.js --ignore-firestore-tests",
    "preview:cleanup": "node scripts/firebase/channel-cleanup.js",
    "preview:cleanup:auto": "node scripts/firebase/channel-cleanup.js --auto",
    "preview:dashboard": "node scripts/workflow/dashboard-cli.js",
    "dashboard:help": "node scripts/workflow/dashboard-cli.js --help",
    "dashboard:verbose": "node scripts/workflow/dashboard-cli.js --verbose",
    "dashboard:generate": "node scripts/workflow/dashboard-cli.js --input workflow-data.json",
    "dashboard:no-open": "node scripts/workflow/dashboard-cli.js --no-open",
    "channels": "node scripts/firebase/channel-cli.js",
    "channels:dashboard": "node scripts/firebase/channel-cli.js dashboard",
    "channels:list": "node scripts/firebase/channel-cli.js list",
    "channels:cleanup": "node scripts/firebase/channel-cli.js cleanup",
    "channels:cleanup:auto": "node scripts/firebase/channel-cli.js cleanup --auto",
    "channels:help": "node scripts/firebase/channel-cli.js --help",
    "scan:dependencies": "node scripts/preview.js --skip-lint --skip-typecheck --skip-tests --skip-bundle-analysis --skip-build --skip-deploy --skip-cleanup",
    "scan:deadcode": "pnpm exec knip",
    "scan:docquality": "node scripts/checks/doc-quality.js",
    "check:modulesyntax": "node scripts/checks/module-syntax-check.js",
    "check:workflows": "node scripts/checks/workflow-validation.js",
    "typecheck": "tsc --noEmit",
    "fix:firebase-test-types": "node scripts/test-types/firebase-type-def.js",
    "preview:slim": "node scripts/preview.js --skip-metrics",
    "check:dependencies": "node scripts/preview.js --skip-lint --skip-typecheck --skip-tests --skip-build --skip-deploy --skip-bundle-analysis --skip-dependency-scan --skip-dead-code-detection --skip-doc-quality --skip-module-syntax --skip-workflow-validation",
    "sync-main": "node scripts/sync-main.js",
    "fix-gitignore": "node scripts/fix-gitignore.js",
    "validate-structure": "node scripts/validate-structure.js",
    "dev": "pnpm --filter \"*\" run dev",
    "dev:admin": "pnpm --filter \"admin\" run dev",
    "dev:hours": "pnpm --filter \"hours\" run dev",
    "build": "pnpm --filter \"*\" run build",
    "mobile-test": "pnpm --filter \"*\" run dev -- --host",
    "mobile-test:admin": "pnpm --filter \"admin\" run dev -- --host",
    "mobile-test:hours": "pnpm --filter \"hours\" run dev -- --host",
    "test": "vitest run --reporter=default --reporter=json",
    "test:dev": "vitest",
    "test:ui": "vitest --ui",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "eslint": "eslint --fix .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@hookform/resolvers": "^4.1.3",
    "@storybook/react": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.74.4",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "date-fns": "^4.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.5.0",
    "firebase-tools": "^14.2.0",
    "glob": "^10.4.5",
    "js-yaml": "^4.1.0",
    "jsdom": "^23.2.0",
    "knip": "^5.50.5",
    "open-cli": "^8.0.0",
    "prettier": "^3.5.3",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.55.0",
    "react-router-dom": "^6.25.1",
    "storybook": "^8.6.12",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^7.18.0",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-static-copy": "^2.3.1",
    "vitest": "^1.6.1",
    "zod": "^3.24.3",
    "zustand": "^5.0.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "firebase": "^11.6.0",
    "immer": "^10.1.1",
    "node-fetch": "^3.3.2",
    "open": "^9.1.0",
    "react-router-dom": "^6.30.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.2"
    }
  },
  "depcheck": {
    "ignoreMatches": [
      "@common",
      "@admin",
      "@hours"
    ],
    "ignorePatterns": [
      "*.config.js",
      "*.config.ts",
      ".*.js",
      "dist",
      "coverage",
      "node_modules",
      "temp",
      "*.stories.tsx",
      "*.test.ts",
      "*.test.tsx"
    ],
    "specials": [
      "eslint",
      "prettier",
      "vite",
      "vitest",
      "babel",
      "typescript",
      "storybook"
    ],
    "skipMissing": false
  }
}
