{
  "name": "time-tracking-system",
  "private": true,
  "scripts": {
    "emulators": "firebase emulators:start",
    "emulators:seed": "firebase emulators:start --import=./seed",
    "emulators:export": "firebase emulators:export ./seed",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:all": "firebase deploy",
    "deploy:admin": "firebase deploy --only hosting:admin",
    "deploy:hours": "firebase deploy --only hosting:hours",
    "build:all": "pnpm run build:common && pnpm run build:admin && pnpm run build:hours",
    "build:common": "cd packages/common && pnpm run build",
    "build:admin": "cd packages/admin && pnpm run build",
    "build:hours": "cd packages/hours && pnpm run build",
    "cleanup": "bash scripts/cleanup.sh",
    "docs:find-duplicates": "node scripts/find-duplicates.js",
    "docs:generate-index": "node scripts/generate-doc-index.js",
    "workflow:check": "node scripts/workflow-check.js",
    "project:audit": "pnpm run docs:generate-index && pnpm run docs:find-duplicates",
    "project:cleanup": "pnpm run cleanup",
    "lint": "eslint \"packages/*/src/**/*.{ts,tsx}\" --max-warnings=100",
    "lint:fix": "eslint \"packages/*/src/**/*.{ts,tsx}\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "precommit": "pnpm run project:audit"
  },
  "devDependencies": {
    "js-yaml": "^4.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}